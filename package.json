{
    "name": "Space",
    "author": "Toshiyuki Masui",
    "version": "0.0.3",
    "main": "main.js",
    "scripts": {
        "start": "electron . aaaa",
        "build": "electron-builder"
    },
    "devDependencies": {
        "electron": "^16.0.4",
        "electron-builder": "^22.14.5"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "date-utils": "^1.2.21",
        "dotenv": "^10.0.0",
        "electron-notarize": "^1.1.1",
        "fetch": "^1.1.0",
        "filetype": "^0.1.0",
        "googleapis": "^92.0.0",
        "gyazo": "^0.2.1",
        "gyazo-api": "^0.3.1",
        "http": "^0.0.1-security",
        "mime-types": "^2.1.34",
        "node-fetch": "^3.1.0",
        "open": "^8.4.0",
        "path": "^0.12.7",
        "querystring": "^0.2.1",
        "request-promise-native": "^1.0.9",
        "trash": "^8.0.0",
        "url": "^0.11.0"
    },
    "build": {
        "productName": "Space",
        "appId": "com.pitecan.space",
	"afterSign": "notarize.js",
        "asar": false,
        "files": [
            "main.js",
            "googledrive.js",
            "gyazo.js",
            "thumbnail.js",
            "s3.js",
            "dialog.js",
            "package.json"
        ],
        "mac": {
	    "forceCodeSigning": false,
            "target": "dmg",
            "icon": "space.icns",
	    "gatekeeperAssess": false,
	    "entitlements": "entitlements.mac.plist",
	    "entitlementsInherit": "entitlements.mac.plist",
	    "extendInfo": {
		"CFBundleDocumentTypes":[
		    {
			"CFBundleTypeName": "All Files",
			"LSHandlerRank": "Owner",
			"LSItemContentTypes": [
			    "public.text",
			    "public.data",
			    "public.content"
			]
		    }
		]
	    }
        },
	"dmg": {
	    "sign": false
	}
    }
}
